---
import TitledSection from '@/components/TitledSection';
import { projectsList } from '@/constants';
import { Image } from '@astrojs/image/components';
---

<TitledSection
  title="My work"
  description="Feel free to have a look on my work that is public and something may catch your eye."
  id="work"
>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 mt-20 gap-10">
    {
      projectsList.map((project) => (
        <article>
          <div class="w-full rounded-xl overflow-hidden h-[250px] relative rounded-br-none border-4 border-opacity-60 border-project-green  dark:border-0">
            <Image
              alt=""
              src={project.imageUrl}
              layout="fill"
              objectPosition="center"
              objectFit="cover"
              className="absolute w-full h-full"
            />
            <div class="flex flex-wrap justify-center lg:justify-start absolute bottom-5 left-5">
              {project.tags.map((tag) => (
                <div class="text-sm uppercase bg-sitePurple rounded-2xl py-1 px-3.5 text-white mr-3 font-semibold ">
                  {tag}
                </div>
              ))}
            </div>
          </div>
          <div class="relative bg-white rounded-xl z-10 p-5 py-8 border-4 border-project-green dark:border-0 border-opacity-60 mt-4 w-full rounded-tl-none ml-auto">
            <a
              href={project.url}
              target="_blank"
              rel="noopener"
              class="dark:text-project-accents dark:text-opacity-90 text-blue-300"
            >
              <h1 class="text-3xl sm:text-4xl text-center lg:text-left">
                {project.title}
              </h1>
            </a>
          </div>
        </article>
      ))
    }
  </div>
</TitledSection>
